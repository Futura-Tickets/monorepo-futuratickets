#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üîç Running pre-commit checks..."

# Check for secrets in staged files
echo "‚Üí Checking for exposed secrets..."
if git diff --cached --name-only | xargs grep -l -E "(sk_live_|pk_live_|MONGO.*mongodb\+srv.*:|JWT_SECRET.*=.{20,})" 2>/dev/null; then
    echo "‚ùå BLOCKED: Potential secrets detected in staged files!"
    echo "   Remove secrets before committing."
    exit 1
fi

# Check for .env files
if git diff --cached --name-only | grep -q "\.env$"; then
    echo "‚ùå BLOCKED: .env file in staged files!"
    echo "   .env files should never be committed."
    exit 1
fi

# Check for large files
echo "‚Üí Checking for large files..."
for file in $(git diff --cached --name-only); do
    if [ -f "$file" ]; then
        size=$(wc -c < "$file" | tr -d ' ')
        if [ "$size" -gt 10485760 ]; then  # 10MB
            echo "‚ùå BLOCKED: File $file is larger than 10MB"
            exit 1
        fi
    fi
done

# Run linting on staged .ts/.tsx files (if they exist)
echo "‚Üí Running linters..."
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')

if [ -n "$STAGED_TS_FILES" ]; then
    echo "   Found TypeScript files, checking syntax..."
    # Note: Individual projects should handle their own linting
    # This is just a basic check that files are valid TS
fi

echo "‚úÖ Pre-commit checks passed!"
exit 0
