{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "moduleDirectories": ["node_modules", "../../node_modules"],
  "transformIgnorePatterns": [
    "node_modules/(?!(nest-winston)/)"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  }
}
