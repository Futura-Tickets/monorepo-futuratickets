# ============================================
# FEATURE FLAGS - Hexagonal Architecture Migration
# ============================================

# Sales Module
USE_HEXAGONAL_SALES=false
HEXAGONAL_SALES_PERCENTAGE=0

# Orders Module (futuro)
USE_HEXAGONAL_ORDERS=false
HEXAGONAL_ORDERS_PERCENTAGE=0

# Payments Module (futuro)
USE_HEXAGONAL_PAYMENTS=false
HEXAGONAL_PAYMENTS_PERCENTAGE=0

# Events Module (futuro)
USE_HEXAGONAL_EVENTS=false
HEXAGONAL_EVENTS_PERCENTAGE=0

# Migration Tools
ENABLE_MIGRATION_LOGGING=false
ENABLE_COMPARISON_MODE=false

# ============================================
# Guía de Feature Flags
# ============================================
#
# Durante la migración gradual, estas variables controlan
# qué implementación se usa: legacy o hexagonal
#
# USE_HEXAGONAL_[MODULE]=true/false
#   - true: Activa arquitectura hexagonal
#   - false: Usa código legacy (default)
#
# HEXAGONAL_[MODULE]_PERCENTAGE=0-100
#   - 0: Solo testing interno
#   - 10: 10% de usuarios (early rollout)
#   - 50: 50% de usuarios (gradual rollout)
#   - 100: Migración completa
#
# ENABLE_MIGRATION_LOGGING=true
#   - Log cada decisión legacy/hexagonal
#   - Útil para métricas y debugging
#
# ENABLE_COMPARISON_MODE=true
#   - Ejecuta ambas implementaciones y compara
#   - Solo para testing (overhead performance)
#   - ⚠️ NO usar en producción con tráfico alto
