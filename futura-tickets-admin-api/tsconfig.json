{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // TypeScript Strict Mode - Enabled after fixing all critical errors
    // Keep strict: false for gradual adoption
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,

    // Additional Type Checking - Critical errors fixed
    // noUnusedLocals and noUnusedParameters disabled to allow gradual cleanup
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Module Resolution
    "resolveJsonModule": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
