{
  "name": "@futuratickets/contracts",
  "version": "2.0.3",
  "description": "FuturaTickets Smart Contracts - NFT ticketing system with resale market and royalties",
  "main": "index.js",
  "files": [
    "abi",
    "index.js"
  ],
  "scripts": {
    "setup": "./start-blockchain.sh",
    "verify": "./verify-setup.sh",
    "pre-deploy": "./scripts/pre-deployment-check.sh",
    "chain": "hardhat node",
    "compile": "hardhat compile",
    "build": "npm run clean && npm run compile && npm run export-abis && npm run sync-abis",
    "clean": "hardhat clean",
    "clean:all": "./clean-all.sh",
    "test": "hardhat test",
    "test:security": "hardhat test test/Security.test.ts",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "export-abis": "ts-node scripts/export-abis.ts",
    "sync-abis": "./scripts/sync-abis.sh",
    "deploy": "hardhat deploy",
    "deploy:enhanced": "ts-node scripts/deploy-enhanced.ts",
    "deploy:baseSepolia": "hardhat deploy --network baseSepolia",
    "deploy:base": "hardhat deploy --network base",
    "verify:baseSepolia": "hardhat verify --network baseSepolia",
    "verify:base": "hardhat verify --network base",
    "admin": "ts-node scripts/admin-cli.ts",
    "monitor": "ts-node examples/event-monitoring.ts",
    "diagnose": "ts-node scripts/diagnose.ts",
    "healthcheck": "curl -s http://127.0.0.1:8545 -X POST -H 'Content-Type: application/json' --data '{\"jsonrpc\":\"2.0\",\"method\":\"eth_blockNumber\",\"params\":[],\"id\":1}' | grep -q result && echo '✅ Node is healthy' || echo '❌ Node is down'",
    "example:integration": "ts-node examples/backend-integration.ts",
    "example:monitor": "ts-node examples/event-monitoring.ts",
    "flatten": "hardhat flatten",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "security:audit": "./scripts/security-audit.sh"
  },
  "keywords": [
    "nft",
    "tickets",
    "blockchain",
    "ethereum",
    "base",
    "erc721"
  ],
  "author": "FuturaTickets",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "hardhat": "^2.22.2",
    "hardhat-deploy": "^0.12.2",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^2.0.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solidity-coverage": "^0.8.11",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.3"
  }
}
