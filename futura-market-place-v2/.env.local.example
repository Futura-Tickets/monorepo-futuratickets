# Futura Tickets Marketplace - Environment Variables
# Copy this file to .env.local and fill in the values

# API Backend URLs
NEXT_PUBLIC_FUTURA=https://api.futuratickets.com
NEXT_PUBLIC_FUTURA_API=https://api-main.futuratickets.com
NEXT_PUBLIC_REFACTOR_RESALE_API=https://resale-api.futuratickets.com

# Azure Blob Storage
NEXT_PUBLIC_BLOB_URL=https://futurastorage.blob.core.windows.net/images

# Google OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
NEXT_PUBLIC_ENVIRONMENT=development

# Sentry Source Maps (for CI/CD)
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=futura-tickets-marketplace
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Build Settings
NODE_ENV=development
