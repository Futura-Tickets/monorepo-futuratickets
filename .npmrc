# NPM Configuration for FuturaTickets Monorepo
# Prevents problematic dependency hoisting that causes type conflicts

# Use legacy peer dependency resolution to avoid conflicts
legacy-peer-deps=true

# Don't automatically install peer dependencies
auto-install-peers=false

# Disable strict peer dependencies
strict-peer-dependencies=false

# Enable package lock
package-lock=true

# Save exact versions instead of ranges
save-exact=false

# Performance optimizations
prefer-offline=true
progress=false
loglevel=error

# Don't audit on install (use npm audit manually)
audit=false
